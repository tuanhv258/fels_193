<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @categories do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :detail %>
      <%= f.text_field :detail, class: "form-control" %>

      <%= f.submit t("page.view.category.create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
