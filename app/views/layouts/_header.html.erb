<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed"
          data-toggle="collapse" data-target="#navbar"
          aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">
            <%= t "page.header.toggleitem" %>
          </span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">
          <%= link_to image_tag("logo.png"), root_path %>
        </a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to t("page.header.homeitem"),
             root_path %>
          </li>
          <li>
            <%= link_to t("page.header.aboutitem"),
             about_path %>
          </li>
          <li>
            <%= link_to t("page.header.contactitem"),
             contact_path %>
          </li>
          <li>
            <%= link_to t("page.header.helpitem"),
             help_path %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle"
                data-toggle="dropdown"
                role="button" aria-haspopup="true"
                aria-expanded="false">
                <%= t "page.header.accountitem" %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <% unless @current_user.is_admin? %>
                  <li>
                    <%= link_to t("page.header.profileitem"),
                     users_path %>
                  </li>
                  <li>
                    <%= link_to t("page.header.signoutitem"),
                     logout_path, method: :delete %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to t("page.header.profileitem"),
                     users_path %>
                  </li>
                  <li>
                    <%= link_to t("page.header.signoutitem"),
                     logout_path, method: :delete %>
                  </li>
                  <li>
                    <%= link_to t("page.header.showlistuser"),
                     admin_users_path %>
                  </li>
                <% end %>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle"
                data-toggle="dropdown"
                role="button" aria-haspopup="true"
                aria-expanded="false">
                <%= t "page.header.categoryitem" %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <% unless @current_user.is_admin? %>
                  <li>
                    <%= link_to t("page.header.showcategories"), categories_path %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to t("page.header.createcategory"),
                     new_category_path %>
                  </li>
                  <li>
                    <%= link_to t("page.header.showcategories"),
                     categories_path %>
                  </li>
                <% end %>
              </ul>
            </li>
            <li>
              <%= link_to t("category.word"), words_path %>
            </li>
          <% else %>
            <li>
              <%= link_to t("page.header.signupitem"), new_user_path %>
            </li>
            <li>
              <%= link_to t("page.header.signinitem"), login_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
