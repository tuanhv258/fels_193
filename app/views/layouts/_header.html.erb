<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed"
          data-toggle="collapse" data-target="#navbar"
          aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">
            <%= t "page.header.toggleitem" %>
          </span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">
          <img src = "/img/logo.png"/>
        </a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to t("page.header.homeitem"),
             root_path %>
          </li>
          <li>
            <%= link_to t("page.header.aboutitem"),
             about_path %>
          </li>
          <li>
            <%= link_to t("page.header.contactitem"),
             contact_path %>
          </li>
          <li>
            <%= link_to t("page.header.helpitem"),
             help_path %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to t("page.header.signupitem"), new_user_path %>
          </li>
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle"
                data-toggle="dropdown"
                role="button" aria-haspopup="true"
                aria-expanded="false">
                <%= t "page.header.accountitem" %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t("page.header.profileitem"),
                   users_path %>
                </li>
                <li>
                  <%= link_to t("page.header.signoutitem"),
                   logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("page.header.signinitem"),
             login_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
